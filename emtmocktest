    let currentQuestions = [];
    let currentIndex = 0;
    let userAnswers = {}; // ç´€éŒ„ä½¿ç”¨è€…ç­”æ¡ˆ { questionIndex: selectedOptionIndex }
    let isOptionRandom = false;

    const startScreen = document.getElementById('start-screen');
    const quizScreen = document.getElementById('quiz-screen');
    const resultScreen = document.getElementById('result-screen');
    
    const questionText = document.getElementById('question-text');
    const optionsContainer = document.getElementById('options-container');
    const currentNumSpan = document.getElementById('current-num');
    const progressFill = document.getElementById('progress');
    const prevBtn = document.getElementById('prev-btn');
    const submitBtn = document.getElementById('submit-btn');
    const randomToggle = document.getElementById('random-options-toggle');

    function initQuiz() {
        // 1. è®€å–è¨­å®š
        isOptionRandom = randomToggle.checked;
        
        // 2. éš¨æ©ŸæŠ½å– 25 é¡Œ
        let shuffled = [...fullQuizData].sort(() => 0.5 - Math.random());
        currentQuestions = shuffled.slice(0, 25);
        
        // 3. é‡ç½®ç‹€æ…‹
        currentIndex = 0;
        userAnswers = {};
        
        // 4. åˆ‡æ›ç•«é¢
        startScreen.style.display = 'none';
        resultScreen.style.display = 'none';
        quizScreen.style.display = 'block';

        showQuestion();
    }

    function showQuestion() {
        const q = currentQuestions[currentIndex];
        
        // æ›´æ–°é€²åº¦ UI
        currentNumSpan.innerText = currentIndex + 1;
        const progressPercent = ((currentIndex) / 25) * 100;
        progressFill.style.width = `${progressPercent}%`;
        
        questionText.innerText = `[${q.id}] ${q.question}`;
        optionsContainer.innerHTML = '';

        // å°èˆªæŒ‰éˆ•ç‹€æ…‹
        prevBtn.style.display = currentIndex > 0 ? 'inline-block' : 'none';
        submitBtn.style.display = 'none'; // å…ˆéš±è—äº¤å·æŒ‰éˆ•

        // æº–å‚™é¸é … (è™•ç†éš¨æ©Ÿ)
        // æ³¨æ„ï¼šç‚ºäº†è®“ä½¿ç”¨è€…æŒ‰ä¸Šä¸€é æ™‚é¸é …ä½ç½®ä¸è®Šï¼Œ
        // ç†æƒ³ç‹€æ³æ‡‰è©²æ˜¯åœ¨ initQuiz æ™‚å°±æ±ºå®šå¥½æ¯é¡Œçš„é¸é …é †åºã€‚
        // ä½†ç‚ºäº†ç°¡åŒ–ï¼Œé€™è£¡æš«æ™‚æ¯æ¬¡æ¸²æŸ“éƒ½éš¨æ©Ÿ (å¦‚æœä¸å¸Œæœ›è®Šå‹•ï¼Œéœ€å­˜åœ¨ currentQuestions è£¡)
        // ä¿®æ­£ï¼šå°‡éš¨æ©Ÿå¾Œçš„é¸é …å­˜å› currentQuestions ä»¥ä¿æŒä¸€è‡´æ€§
        if (!q.processedOptions) {
            let opts = q.options.map((text, i) => ({ 
                originalIndex: i + 1, 
                text: text 
            }));
            
            if (isOptionRandom) {
                opts.sort(() => Math.random() - 0.5);
                opts.forEach(o => o.text = o.text.replace(/^[\(ï¼ˆ]?\d+[\)ï¼‰\.]?/, '')); // ç§»é™¤ç·¨è™Ÿ
            }
            q.processedOptions = opts;
        }

        // æ¸²æŸ“é¸é …æŒ‰éˆ•
        q.processedOptions.forEach(opt => {
            const btn = document.createElement('button');
            btn.className = 'option-btn';
            btn.innerText = opt.text;
            
            // æª¢æŸ¥æ˜¯å¦å·²é¸æ“‡é (å›é ­ä¿®æ”¹æ™‚é¡¯ç¤º)
            if (userAnswers[currentIndex] === opt.originalIndex) {
                btn.classList.add('selected');
            }

            btn.onclick = () => selectOption(opt.originalIndex);
            optionsContainer.appendChild(btn);
        });
        
        // å¦‚æœæ˜¯æœ€å¾Œä¸€é¡Œï¼Œä¸”å·²ç¶“ä½œç­”éï¼Œé¡¯ç¤ºäº¤å·æŒ‰éˆ•
        if (currentIndex === 24 && userAnswers[currentIndex]) {
             submitBtn.style.display = 'inline-block';
        }
    }

    function selectOption(originalIndex) {
        // 1. è¨˜éŒ„ç­”æ¡ˆ
        userAnswers[currentIndex] = originalIndex;
        
        // 2. æ›´æ–° UI é¡¯ç¤º (Highlight)
        const buttons = optionsContainer.getElementsByClassName('option-btn');
        Array.from(buttons).forEach(btn => btn.classList.remove('selected'));
        // æ‰¾å‡ºå°æ‡‰çš„æŒ‰éˆ•åŠ  highlight (é€™è£¡éœ€è¦é‡æ–°éæ­·å› ç‚º DOM é †åºå¯èƒ½å› éš¨æ©Ÿè€Œç•°)
        // ç°¡å–®åšæ³•ï¼šé‡æ–° render æˆ–ç›´æ¥æ“ä½œ click çš„ target (ä½†é€™è£¡å‚³å…¥ index)
        // ç‚ºäº†æ•ˆèƒ½ï¼Œç›´æ¥é‡æ–°å‘¼å« showQuestion æ›´æ–°ç‹€æ…‹å³å¯ï¼Œä½†ç‚ºäº†å‹•ç•«é †æš¢ï¼š
        showQuestion(); 

        // 3. è‡ªå‹•è·³ä¸‹ä¸€é¡Œ (å»¶é² 300ms è®“ä½¿ç”¨è€…çœ‹åˆ°é¸æ“‡)
        if (currentIndex < 24) {
            setTimeout(() => {
                nextQuestion();
            }, 300);
        } else {
            // æœ€å¾Œä¸€é¡Œï¼Œé¡¯ç¤ºäº¤å·æŒ‰éˆ•
            submitBtn.style.display = 'inline-block';
            // è‡ªå‹•æ»¾å‹•åˆ°åº•éƒ¨ä»¥å…æŒ‰éˆ•è¢«é®ä½
            window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
        }
    }

    function nextQuestion() {
        if (currentIndex < 24) {
            currentIndex++;
            showQuestion();
            window.scrollTo(0, 0);
        }
    }

    function prevQuestion() {
        if (currentIndex > 0) {
            currentIndex--;
            showQuestion();
            window.scrollTo(0, 0);
        }
    }

    function submitQuiz() {
        if (!confirm("ç¢ºå®šè¦äº¤å·å—ï¼Ÿ")) return;
        
        finishQuiz();
    }

    function finishQuiz() {
        let score = 0;
        let html = '';
        
        currentQuestions.forEach((q, idx) => {
            const userAns = userAnswers[idx]; // ä½¿ç”¨è€…çš„åŸå§‹é¸é … index (1-4)
            const correctAns = parseInt(q.answer);
            const isCorrect = (userAns === correctAns);
            
            if (isCorrect) score += 4;
            
            // æ‰¾å‡ºæ­£ç¢ºé¸é …çš„æ–‡å­—
            // æ³¨æ„ï¼šq.processedOptions æ˜¯æ‰“äº‚å¾Œçš„ï¼Œæˆ‘å€‘éœ€è¦éæ­·æ‰¾åˆ° originalIndex ç¬¦åˆçš„
            const correctOptText = q.processedOptions.find(o => o.originalIndex === correctAns).text;
            const userOptText = userAns ? q.processedOptions.find(o => o.originalIndex === userAns).text : "æœªä½œç­”";

            // ç”¢ç”Ÿæª¢è¨ HTML
            html += `
                <div class="review-item ${isCorrect ? 'correct' : 'wrong'}">
                    <div class="review-q">${idx + 1}. [${q.id}] ${q.question}</div>
                    <div class="review-ans">
                        <span class="user-ans-label">æ‚¨çš„ç­”æ¡ˆï¼š</span>
                        <span class="${isCorrect ? 'ans-correct' : 'ans-wrong'}">${userOptText}</span>
                        ${!isCorrect ? `<br><span>æ­£ç¢ºç­”æ¡ˆï¼š</span><span class="ans-correct">${correctOptText}</span>` : ''}
                    </div>
                </div>
            `;
        });

        // é¡¯ç¤ºçµæœç•«é¢
        quizScreen.style.display = 'none';
        resultScreen.style.display = 'block';
        
        const finalScoreEl = document.getElementById('final-score');
        const circleEl = document.getElementById('score-circle-el');
        const passFailText = document.getElementById('pass-fail-text');
        const msgEl = document.getElementById('result-msg');
        
        finalScoreEl.innerText = score;
        
        if (score >= 90) {
            circleEl.className = 'score-circle pass';
            passFailText.innerText = 'åŠæ ¼';
            msgEl.innerText = "å¤ªæ£’äº†ï¼æ‚¨å·²é€šéåŠæ ¼æ¨™æº–ã€‚";
        } else {
            circleEl.className = 'score-circle fail';
            passFailText.innerText = 'ä¸åŠæ ¼';
            msgEl.innerText = "æœªé” 90 åˆ†ï¼Œè«‹å†å¤šåŠ ç·´ç¿’ï¼";
        }

        document.getElementById('review-container').innerHTML = html;
        window.scrollTo(0, 0);
    }
</script>

